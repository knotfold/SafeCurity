<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:gravity="center"
    >

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       tools:ignore="UselessParent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="vertical">

           <ImageView
               android:layout_marginTop="50dp"
               android:layout_width="match_parent"
               android:layout_height="120dp"
               android:contentDescription="@string/todo"
               android:scaleType="fitCenter"
               android:src="@drawable/logo" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:text="Bienvenido"
               android:textStyle="italic|bold"
               android:textSize="25sp"

               android:textColor="@color/colorAccent"/>

            <Button
                android:layout_marginTop="30dp"
               android:layout_marginBottom="20sp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/edit_button_shadow_custom"
               android:text="Perfil de usuario"
               android:textColor="@color/colorPrimaryDark"
               android:paddingHorizontal="40dp"
               android:layout_marginHorizontal="35dp"
               style="?android:attr/borderlessButtonStyle"
               android:drawableLeft="@drawable/ic_person_gray_35dp"/>

           <Button
               android:layout_marginBottom="20sp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/edit_button_shadow_custom"
               android:text="Notificaciones"
               android:textColor="@color/colorPrimaryDark"
               android:paddingHorizontal="40dp"
               android:layout_marginHorizontal="35dp"
               style="?android:attr/borderlessButtonStyle"
               android:drawableLeft="@drawable/ic_notifications_active_gray_35dp"/>

           <Button
               android:layout_marginBottom="20sp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/edit_button_shadow_custom"
               android:text="POLITICAS DE LA EMPRESA"
               android:textColor="@color/colorPrimaryDark"
               android:paddingHorizontal="40dp"
               android:layout_marginHorizontal="35dp"
               style="?android:attr/borderlessButtonStyle"
               android:drawableLeft="@drawable/ic_help_gray_35dp"/>
           <Button
               android:layout_marginBottom="10sp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/edit_button_shadow_custom"
               android:text="Danos tu opinion DE LA APP"
               android:textColor="@color/colorPrimaryDark"
               android:paddingHorizontal="40dp"
               android:layout_marginHorizontal="35dp"
               style="?android:attr/borderlessButtonStyle"
               android:drawableLeft="@drawable/ic_hearing_gray_35dp"/>

       </LinearLayout>
   </ScrollView>


</LinearLayout>